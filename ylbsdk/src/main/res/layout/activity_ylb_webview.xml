<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/fl_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_ylb_back"
                android:scaleType="centerInside"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:id="@+id/iv_title_finish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_ylb_close"
                android:scaleType="centerInside"
                android:layout_marginLeft="40dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#333"
                android:textSize="18sp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ddd"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"/>

        <ProgressBar
            android:id="@+id/pb_process"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:progressDrawable="@drawable/drawable_ylb_progress_bar"
            android:max="100" />

    </FrameLayout>
</LinearLayout>